<div class="container-fluid p-4 m-auto">
    <div class="card p-4">
        <div>
            <div class="d-flex flex-column mx-auto">
                <img src="/img/PersonImg/@Model.PersonName/profilePicture.jpg" class="rounded m-2 w-75 align-self-center" style="max-width: 300px;">

                <h class="fw-bold fs-1 text-center w-100 p-2">
                    @Model.PersonName
                </h>
            </div>

            <p class="fs-4">
                @Html.Raw(Model.Text)
            </p>
        </div>
    </div>
</div>